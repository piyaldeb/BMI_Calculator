<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtresult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical"
    android:rotationX="4"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtweigth"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your weight"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtheightft"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:hint="Enter your height(FEET)"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtheightin"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your height(INCHES)"
        android:inputType="number" />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:accessibilityLiveRegion="polite"
        android:backgroundTint="#7CA3A9CC"
        android:rotationY="0"
        android:text="Click" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="186dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:textSize="20dp"


        android:text="Result" />

    <TextView
        android:id="@+id/textViewb"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""


        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewp"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text=""
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewgit"
        android:layout_width="152dp"
        android:layout_height="34dp"
        android:gravity="bottom"
        android:textSize="15dp"
        android:autoLink="email"


        android:text="Created by
                                              pIyal Debnath Ranak"
        android:textStyle="italic" />


</LinearLayout>